<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded"
xmlns:lv="nativescript-ui-listview" actionBarHidden="true">
    <!-- <ActionBar class="header" title="My App1" icon="" /> -->
    <GridLayout rows="auto, auto, *, auto">
        <StackLayout row="0" class="custom-actionbar" androidElevation="10" verticalAlignment="bottom">
            <Label text="Users"></Label> 
        </StackLayout> 
        <StackLayout row="1" class="search-bar" orientation="horizontal">
            <TextField hint="Search" width="94%" textChange="onSearchTextChange"></TextField>
            <Label text="&#xf00d;" tap="ClearSearch" class="fa" verticalAlignment="center"></Label>  
        </StackLayout>
        <lv:RadListView row="2" items="{{ userDetails }}" itemInsertAnimation="Slide" 
                itemSwipeProgressStarted="onSwipeCellStarted" swipeActions="true">
            <lv:RadListView.itemTemplate>  
                <GridLayout columns="10, *" class="lv-item"> 
                    <StackLayout col="0" class="btn-success"></StackLayout>   
                    <StackLayout col="1"> 
                        <Label class="l-name" text="{{ FIRST_NAME + ' ' + LAST_NAME  }}"></Label>
                        <Label text="{{ ADDRESS  }}"></Label>
                    </StackLayout>   
                </GridLayout>     
            </lv:RadListView.itemTemplate>    
            <lv:RadListView.itemSwipeTemplate>   
                <GridLayout columns="145, *" class="lv-button">
                    <GridLayout col="0" columns="*,*" id="grid-button" userid="{{ ID }}">
                        <StackLayout tap="UpdateDetails" col="0" class="btn-warning lv-btn-list" verticalAlignment="center" height="100%">
                            <Label text="&#xf304;" class="fa"></Label>
                        </StackLayout>
                        <StackLayout tap="RemoveDetails" col="1" class="btn-danger lv-btn-list" verticalAlignment="center" height="100%">
                            <Label text="&#xf2ed;" class="fa"></Label>
                        </StackLayout>
                    </GridLayout> 
                </GridLayout> 
            </lv:RadListView.itemSwipeTemplate>
        </lv:RadListView>   
        <StackLayout class="p-20" row="3">
            <Button text="Add User" tap="AddUser" class="btn-success" />   
        </StackLayout>
    </GridLayout>   
</Page> 
  